---
interface Props {
    variant?: string;
    href: string;
    class?: string;
    "aria-label"?: string;
}
const props = Astro.props;
const { variant = "primary", href, "aria-label": aria } = props;
---

<a
    class={`${variant} px-4 py-2 gap-1 rounded-lg w-fit flex items-center duration-300 ease-in-out border-b-4 hover:border-b-8 `}
    {href}
    target="_blank"
    aria-label={aria}
>
    <slot />
</a>

<style>
    .primary {
        @apply bg-green-500 border-green-700 text-gray-50 fill-gray-50;
    }

    .secondary {
        @apply bg-white border-gray-500;
    }
</style>
