---
// Props del componente
const { id, src, alt } = Astro.props;
---

<a href={`#${id}`}>
    <img
        src={src}
        alt={alt}
        class="h-16 rounded-md shadow-md duration-300 hover:scale-105"
    />
</a>

<div
    id={id}
    class="fixed inset-0 bg-black bg-opacity-50 justify-center items-center hidden z-50 target:flex"
>
    <a href="#" class="absolute top-5 right-5 text-white text-3xl">&times;</a>
    <img src={src} alt={alt} class="max-w-96 rounded-md" />
</div>
