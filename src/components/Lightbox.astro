---
// Props del componente
const { id, src, alt } = Astro.props;
---

<a href={`#${id}`}>
    <img
        src={src}
        alt={alt}
        class="h-16 rounded-md hover:shadow-md duration-300 hover:scale-105"
    />
</a>

<div
    id={id}
    class="absolute invisible inset-0 bg-black bg-opacity-0 justify-center items-center z-40 p-6 gap-2 flex target:visible target:bg-opacity-50 target:backdrop-blur-md duration-300 ease-in-out"
>
    <img
        src={src}
        alt={alt}
        class="rounded-md max-w-[720px] w-full z-10 opacity-0 scale-50 duration-300 ease-in-out"
    />

    <!-- Fondo clicable -->
    <a href="#" class="absolute inset-0"></a>
</div>

<style>
    div:target img {
        opacity: 1;
        transform: scale(1);
    }
</style>
