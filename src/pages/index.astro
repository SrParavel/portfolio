---
import Hero from "../components/Hero.astro";
import Navigation from "../components/Navigation.astro";
import "@fontsource-variable/onest";
import Social from "../components/Social.astro";
import Lightbox from "../components/Lightbox.astro";
import Experiences from "../components/Experiences.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Bienvenido a mi portafolio web, aquí podrás encontrar información sobre mí y mi trabajo en el mundo del desarrollo y la tecnología"
		/>
		<title>Portafolio Juan Camilo Gámez</title>
	</head>
	<body class="lg:flex mx-auto max-w-5xl text-gray-900 fill-gray-900">
		<header
			class="flex flex-col justify-between flex-1 p-6 lg:py-24 gap-4 lg:sticky top-0 lg:h-screen"
		>
			<Hero />
			<!-- <Lightbox id="avatar" src="paravel.jpg" alt="imagen de paravel" /> -->
			<Navigation />
			<Social />
		</header>
		<main class="flex flex-col flex-1 p-6 gap-4 lg:py-24">
			<Experiences />
		</main>
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}
	body {
		font-family: "Onest Variable", sans-serif;
	}

	h1 {
		font-size: 3rem;
		line-height: 1;
		font-weight: 800;
	}

	h2 {
		font-size: 1.75rem;
		font-weight: 700;
	}

	h3 {
		font-size: 1.25rem;
		font-weight: 700;
	}

	h4 {
		font-size: 1rem;
		font-weight: 600;
	}

	p {
		text-wrap: balance;
		line-height: 1.3;
	}
</style>
